@using DancingGoat.Models.Manufacturers;
@model IEnumerable<ManufactureListItemViewModel>

    <div class="row manufacturer-list">
        @if (Model != null && Model.Any())
        {
            foreach (var manufacturer in Model)
            {
                <div class="col-md-4 col-lg-3 manufacturer-item">
                    <a href="@manufacturer.Url">
                        <img src="@manufacturer.ImagePath" alt="@manufacturer.Name" />
                    </a>
                </div>
            }
        }
        else
        {
            <span class="ContentLabel">@ResHelper.GetString("DancingGoatMvc.Manufacturers.NoMatchingManufacturers")</span>
        }
    </div>

