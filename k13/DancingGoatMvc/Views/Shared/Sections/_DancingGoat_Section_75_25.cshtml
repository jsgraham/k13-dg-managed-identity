@using DancingGoat.Models.Sections

@model Kentico.PageBuilder.Web.Mvc.ComponentViewModel<ThemeSectionProperties>

<div class="row row--with-cols-padding @Model.Properties.Theme">
    <div class="col-md-9">
        @Html.Kentico().WidgetZone(ZoneRestrictions.MAIN_ZONE_NAME, allowedWidgets: ZoneRestrictions.GetWideZoneRestrictions())
    </div>
    <div class="col-md-3">
        @Html.Kentico().WidgetZone(ZoneRestrictions.SIDE_PANEL_ZONE_NAME, allowedWidgets: ZoneRestrictions.GetNarrowZoneRestrictions())
    </div>
</div>
