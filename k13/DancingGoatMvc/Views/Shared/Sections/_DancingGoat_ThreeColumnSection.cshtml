{
    <div class="row">
        <h1 class="title-tab">@Model.Properties.Title</h1>
    </div>
}
<div class="row @Model.Properties.Theme">
    <div class="col-md-4">
        @Html.Kentico().WidgetZone(allowedWidgets: ZoneRestrictions.GetNarrowZoneRestrictions())
    </div>
    <div class="col-md-4">
        @Html.Kentico().WidgetZone(allowedWidgets: ZoneRestrictions.GetNarrowZoneRestrictions())
    </div>
    <div class="col-md-4">
        @Html.Kentico().WidgetZone(allowedWidgets: ZoneRestrictions.GetNarrowZoneRestrictions())
    </div>
</div>
