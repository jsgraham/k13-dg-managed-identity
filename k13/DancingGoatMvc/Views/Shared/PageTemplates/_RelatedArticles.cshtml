@model IEnumerable<DancingGoat.Models.PageTemplates.RelatedArticleViewModel>
@if (Model.Any())
{
    <div class=" article-related-articles">
        <h1 class="title-tab">@ResHelper.GetString("DancingGoatMvc.Articles.RelatedArticles")</h1>
        <div class="row">
            @foreach (var article in Model)
            {
                <div class="article-tile @(article.HandleArticlePosition ? "col-lg-3 col-md-6 col-sm-12" : "")">
                    @if (!string.IsNullOrEmpty(article.TeaserPath))
                    {
                        <a href="@article.Url">
                            <img src="@article.TeaserPath" alt="@article.Title" title="@article.Title" class="article-tile-image" />
                        </a>
                    }
                    <div class="article-tile-date">
                        @article.PublicationDate.ToString("m")
                    </div>
                    <div class="article-tile-content">
                        <h2 class="h4">
                            <a href="@article.Url">@article.Title </a>
                        </h2>
                        <p class="article-tile-text">
                            @article.Summary
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
}