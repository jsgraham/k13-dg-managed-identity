@model DancingGoat.Models.Checkout.CustomerViewModel

<h4>@ResHelper.GetString("DancingGoatMvc.CustomerDetails")</h4>

@Html.ValidatedEditorFor(m => m.FirstName)
@Html.ValidatedEditorFor(m => m.LastName)
@if (User.Identity.IsAuthenticated && !string.IsNullOrWhiteSpace(Model.Email))
{
    @Html.HiddenFor(model => model.Email)
    @Html.ValidatedEditorFor(model => model.Email, disabled: true)
}
else
{
    @Html.ValidatedEditorFor(model => model.Email)
}

@Html.ValidatedEditorFor(m => m.PhoneNumber)

<h4>@ResHelper.GetString("DancingGoatMvc.CompanyDetails")</h4>

@Html.ValidatedEditorFor(m => m.Company)
@Html.ValidatedEditorFor(m => m.OrganizationID)
@Html.ValidatedEditorFor(m => m.TaxRegistrationID)